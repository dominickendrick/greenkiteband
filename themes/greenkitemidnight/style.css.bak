@charset "UTF-8";


/*********************
  COMMON TAG STYLES
**********************/
body {
  background: #000;
  font: 100.01% Arial, Helvetica, sans-serif;
}

table {
  font: 100%;
  font-size: inherit;
  border-collapse: separate !important;
}

select {
  font: 99% Arial, Helvetica, sans-serif;
}

input,
