  font-size: 100%;
  margin: 0;
  outline: none;
  padding: 1px;
}

pre {
  background: #ddd;
  border: 1px solid #aaa;
  font: 115% monospace;
  font-size: 100%;
  padding: .75em 1.5em;
}

code {
  font: 115% monospace;
